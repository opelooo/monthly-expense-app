@{
    int tableRows = ViewData["tableRows"] as int? ?? 5;
    bool showPagination = ViewData["showPagination"] as bool? ?? true;
}

<!-- SKELETON LOADING STATE -->
<div id="skeleton-loading">
    <!-- Filters & Actions Skeleton -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <div class="skeleton skeleton-text skeleton-width-100 me-2"></div>
                        <div class="skeleton skeleton-width-80 skeleton-height-38 skeleton-rounded"></div>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <div class="skeleton skeleton-width-140 skeleton-height-38 skeleton-rounded d-inline-block;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Skeleton -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><div class="skeleton skeleton-text skeleton-width-80"></div></th>
                            <th><div class="skeleton skeleton-text skeleton-width-150"></div></th>
                            <th><div class="skeleton skeleton-text skeleton-width-120"></div></th>
                            <th class="text-end"><div class="skeleton skeleton-text skeleton-width-100"></div></th>
                            <th class="text-center"><div class="skeleton skeleton-text skeleton-width-150"></div></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < tableRows; i++)
                        {
                            <tr>
                                <td><div class="skeleton skeleton-text"></div></td>
                                <td><div class="skeleton skeleton-text"></div></td>
                                <td>
                                    <div class="skeleton skeleton-text skeleton-width-100 skeleton-height-24 skeleton-rounded"></div>
                                </td>
                                <td class="text-end"><div class="skeleton skeleton-text skeleton-width-80"></div></td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-1">
                                        <div class="skeleton skeleton-width-60 skeleton-height-30 skeleton-rounded"></div>
                                        <div class="skeleton skeleton-width-60 skeleton-height-30 skeleton-rounded"></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination Skeleton -->
    @if (showPagination)
    {
        <div class="d-flex justify-content-between align-items-center">
            <div class="skeleton skeleton-text skeleton-width-150"></div>
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    @for (int i = 0; i < 5; i++)
                    {
                        <li class="page-item"><div class="skeleton skeleton-text skeleton-width-40px skeleton-height-38 skeleton-rounded"></div></li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>
