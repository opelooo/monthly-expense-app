<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Open Expense App</title>
    <script type="importmap"></script>
    <link rel="preload" href="~/lib/bootstrap/dist/css/bootstrap.min.css" as="style" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/bootstrap/icons/bootstrap-icons-1.13.1/bootstrap-icons.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/site-min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OpenExpenseApp.styles.css" asp-append-version="true" />
    <!-- Theme flash prevention - external script -->
    <script src="~/js/theme-init.js" asp-append-version="true"></script>
</head>
    <body>
        @if (Context.Session.GetString("UserId") != null)
        {
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Open Expense App</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                                aria-controls="navbarSupportedContent"                  aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav grow">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Expense" asp-action="Index">Expenses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Income" asp-action="Index">Incomes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="d-flex align-items-center me-3">
                        <!-- Theme Toggle Button -->
                        <button class="theme-toggle-btn me-3" data-action="toggle-theme" title="Toggle Dark/Light Mode">
                            <i id="theme-icon" class="bi bi-moon-fill"></i>
                        </button>
                        <div class="align-self-center me-2 text-nowrap">
                            User: @Context.Session.GetString("Username")
                        </div>
                        <form id="logoutForm" method="post" asp-controller="Authentication" asp-action="Logout" class="ms-3">
                            <button type="button" class="btn btn-outline-danger btn-sm"
                                    data-action="confirm-logout">Logout</button>
                        </form>
                    </div>
                </nav>
            </header>
        }
        <div class="container flex-grow-1">
            <main role="main" class="pb-3 main-content">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2026 - Open Expense App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
        <script src="~/js/site-min.js" asp-append-version="true" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>

        @if (TempData["ShowAlert"] is bool showAlert && showAlert)
        {
            <script id="alert-config-data" type="application/json">
                @Html.Raw(TempData["AlertData"]?.ToString() ?? "{}")
            </script>
        }
        <script src="~/js/alert-init.js" asp-append-version="true" defer></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>